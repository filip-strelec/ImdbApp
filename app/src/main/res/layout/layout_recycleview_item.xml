<?xml version="1.0" encoding="utf-8"?>
<com.silencedut.expandablelayout.ExpandableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:expWithParentScroll="true"
    app:expDuration = "300"
    android:id="@+id/relativeLayoutList"
    app:expExpandScrollTogether = "false"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"



    >


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

 android:padding="10dp"
    android:id="@+id/child1"

    >







<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/customborder"
    >



    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/circleViewList"

        android:src="@drawable/ic_launcher_background"
        app:civ_border_color="#2b459c"
        app:civ_border_width="3dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#7290dc"
        app:civ_shadow_radius="10" />





    <TextView
        android:id="@+id/textList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="30dp"
        android:text="test"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/circleViewList"
        android:textColor="#000000"
        android:textSize="20sp" />


    <Button
        android:id="@+id/gumb2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"


        android:layout_marginTop="30dp"
        android:alpha="0.4"
        android:background="@drawable/star"
        android:text=""
        tools:ignore="HardcodedText" /></RelativeLayout>


    <!--android:onClick="trrr"-->
</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/description_layout"

        >




        <TextView
            android:layout_width="wrap_content"
           android:layout_height="83dp"
android:gravity="center"
           android:textAlignment="center"
            android:textColor="#000000"
            android:id="@+id/textDescription"
            android:text="Description"


android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="13sp"
            />
    </LinearLayout>

</com.silencedut.expandablelayout.ExpandableLayout>